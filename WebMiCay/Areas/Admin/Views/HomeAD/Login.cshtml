
@{
    Layout = null;
}

<!DOCTYPE html>
<link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
<link href="/Client/css/bootstrap.min.css" rel="stylesheet">
<link href="/Client/css/owl.carousel.min.css" rel="stylesheet">
<link href="~/Client/css/stylelogin.css" rel="stylesheet" />
<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <form class="section text-center" method="post">
                                            <fieldset>
                                                <h4 class="mb-4 pb-3" style="color: #ffeba7">Đăng nhập</h4>
                                                <div class="form-group">
                                                    <input type="text" name="username" class="form-style" placeholder="Tên tài khoản">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input type="password" name="password" class="form-style" placeholder="Mật khẩu">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <p class="text-bg-danger" style="margin-top: 10px; color:#ff0018">
                                                    @TempData["error"]
                                                </p>
                                                <button type="submit" class="btn mt-4 ">Đăng nhập</button>
                                            </fieldset>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>